{
  "name": "conduit",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:main": "nest start @apps/main-service",
    "start:cron": "nest start @apps/cron-service",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/conduit/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/conduit/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/bull": "^11.0.2",
    "@nestjs/bullmq": "^10.2.3",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^8.0.7",
    "@prisma/client": "^6.0.1",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "bullmq": "^5.44.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cron": "^2.4.4",
    "dotenv": "^16.4.7",
    "imagekit": "^6.0.0",
    "ioredis": "^5.6.0",
    "postmark": "^4.0.5",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "slugify": "^1.6.6",
    "uuid": "^11.0.3",
    "xstate": "5.14.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "prisma": "^6.0.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "5.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@lib/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@lib/interceptors(|/.*)$": "<rootDir>/libs/interceptors/src/$1",
      "^@lib/decorators(|/.*)$": "<rootDir>/libs/decorators/src/$1",
      "^@lib/helpers(|/.*)$": "<rootDir>/libs/helpers/src/$1",
      "^@lib/types(|/.*)$": "<rootDir>/libs/types/src/$1",
      "^@lib/conduit-postmark(|/.*)$": "<rootDir>/libs/conduit-postmark/src/$1",
      "^@lib/conduit-imagekit(|/.*)$": "<rootDir>/libs/conduit-imagekit/src/$1"
    }
  }
}
